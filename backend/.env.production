# Production Environment Variables for Render.com

# Server Configuration
NODE_ENV=production
PORT=10000

# Database Configuration
# Replace with your actual MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/help-yourself-auth?retryWrites=true&w=majority

# JWT Configuration
# Generate a secure random string for production
JWT_SECRET=your-super-secure-jwt-secret-for-production-change-this
JWT_EXPIRES_IN=7d

# Frontend Configuration
# Will be updated after frontend deployment
FRONTEND_URL=https://help-yourself.netlify.app

# Security
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Additional Production Settings
SESSION_SECRET=your-session-secret-for-production
